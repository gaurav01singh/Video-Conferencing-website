<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VCW</title>
    <style>
      /* Reset some default styles */
      body,
      h1,
      p,
      ul,
      li {
        margin: 0;
        padding: 0;
      }

      /* Set a background color for the entire page */

      /* Style the navigation bar */
      nav {
        background-color: #333;
        color: #fff;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      nav h1 {
        font-size: 24px;
      }

      nav ul {
        list-style: none;
      }

      nav ul li {
        display: inline;
        margin-right: 10px;
        padding-right: 10px;
      }

      nav ul li a {
        text-decoration: none;
        color: #fff;
      }
      nav ul li a:hover {
        text-decoration: underline;
      }
      .author {
        text-align: center;
      }

      .author_heading {
        font-size: 32px;
        margin-top: 20px;
      }

      .author_body {
        font-size: 18px;
        margin-top: 10px;
      }

      /* Style the hero image */
      .hero-image {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 20px auto;
        border: 1px solid #ddd;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      }
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
      }

      .container {
        max-width: 99vh;
        margin: 0 auto;
        text-align: center;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
        margin-top: 50px;
      }

      h1 {
        font-size: 24px;
        margin-bottom: 20px;
      }

      form {
        display: flex;
        flex-direction: column;
      }

      label {
        font-weight: bold;
        margin-top: 10px;
      }

      input {
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 3px;
      }

      button {
        background-color: #007bff;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 3px;
        margin-top: 10px;
        cursor: pointer;
      }

      button:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <nav>
      <h1>Video Conferencing Website</h1>
      <ul>
        <li><a href="/register">Sign up!!</a></li>
        <li><a href="/login">Login</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
    <div class="container">
      <div class="author">
        <h1 class="author_heading">Hi, I am Gaurav</h1>
        <p class="author_body">Full stack Web developer</p>
      </div>

      <img
        src="https://dyte.io/blog/content/images/size/w1000/2023/02/Dyte-Meeting.png"
        alt="person looking out through window"
        class="hero-image"
        width="981"
        height="528"
      />
      <h1>Create or Join a Room</h1>

      <div id="createRoomForm" style="display: none">
        <form>
          <label for="createUserName">Your Name:</label>
          <input
            type="text"
            id="createUserName"
            name="createUserName"
            required
          />
          <button type="submit" id="createRoomButton">Create Room</button>
        </form>
      </div>

      <div id="joinRoomForm" style="display: none">
        <form>
          <label for="joinCode">Join Code:</label>
          <input type="text" id="joinCode" name="joinCode" required />
          <button type="submit" id="joinRoomButton">Join Room</button>
        </form>
      </div>

      <button type="button" id="showCreateRoomButton">Create Room</button>
      <button type="button" id="showJoinRoomButton">Join Room</button>
    </div>

    <script>
      const showCreateRoomButton = document.getElementById(
        "showCreateRoomButton"
      );
      const showJoinRoomButton = document.getElementById("showJoinRoomButton");
      const createRoomButton = document.getElementById("createRoomButton");
      const joinRoomButton = document.getElementById("joinRoomButton");

      showCreateRoomButton.addEventListener("click", () => {
        createRoomForm.style.display = "block";
        joinRoomForm.style.display = "none";
      });

      showJoinRoomButton.addEventListener("click", () => {
        joinRoomForm.style.display = "block";
        createRoomForm.style.display = "none";
      });
      createRoomButton.addEventListener("click", (e) => {
        e.preventDefault(); // Prevent the default form submission
        window.location.replace(`http://localhost:8000/room34`);
      });

      joinRoomButton.addEventListener("click", (e) => {
        e.preventDefault(); // Prevent the default form submission
        const joinCode = document.getElementById("joinCode").value;
        window.location.replace(`http://localhost:8000/${joinCode}`);
      });
    </script>
  </body>
</html>
